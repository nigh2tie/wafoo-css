{
  "name": "wafoo-css",
  "version": "1.0.0",
  "description": "Japanese-inspired CSS framework with traditional aesthetics",
  "main": "dist/wafoo.css",
  "style": "dist/wafoo.css",
  "exports": {
    ".": "./dist/wafoo.css",
    "./core": "./dist/wafoo-core.css",
    "./extras": "./dist/wafoo-extras.css",
    "./wafoo.css": "./dist/wafoo.css",
    "./wafoo-core.css": "./dist/wafoo-core.css",
    "./wafoo-extras.css": "./dist/wafoo-extras.css"
  },
  "author": "Q_Q",
  "license": "MIT",
  "keywords": [
    "css",
    "css-framework",
    "japanese",
    "wafoo",
    "和風",
    "ui",
    "responsive",
    "design-system",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nigh2tie/wafoo-css.git"
  },
  "bugs": {
    "url": "https://github.com/nigh2tie/wafoo-css/issues"
  },
  "homepage": "https://nigh2tie.github.io/wafoo-css/",
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md",
    "REFERENCE.md"
  ],
  "scripts": {
    "build": "bash scripts/build.sh",
    "build:css": "postcss dist/wafoo.css -o dist/wafoo.min.css",
    "build:full": "bash scripts/build.sh && gzip -c dist/wafoo.min.css | wc -c",
    "generate:utils": "node scripts/generate-utilities.js",
    "size": "gzip -c dist/wafoo.min.css | wc -c",
    "size:core": "gzip -c dist/wafoo-core.min.css | wc -c",
    "size:extras": "gzip -c dist/wafoo-extras.min.css | wc -c",
    "format": "prettier --write \"{src,docs,examples,devserver,scripts}/**/*.{css,html,js,md}\"",
    "format:check": "prettier -c \"{src,docs,examples,devserver,scripts}/**/*.{css,html,js,md}\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:html": "html-validate \"docs/**/*.html\" \"examples/**/*.html\"",
    "lint": "npm run lint:css",
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e",
    "test:a11y": "playwright test tests/a11y",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "html-validate": "^8.24.1",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.44.1"
  }
}
